<Window x:Class="RestApiApp_Pers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestApiApp_Pers"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button Click="Button_Click" Content="Connect" Width="100" Height="100" Margin="20"/>
            <TextBox Name="txb" Width="100" Height="50" Text="2"/>
        </StackPanel>
        

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Image Name="image" Width="100" Height="100" Margin="10"/>
            <StackPanel>
                <Label Name="lblName" Width="auto" Height="30"/>
                <Label Name="lblLocation" Width="auto" Height="30"/>
                <Label Name="lblSpecies" Width="auto" Height="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
